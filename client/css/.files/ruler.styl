.ruler
  display: inline-block
  vertical-align: top
  $border-color = #000
  $border = 1px solid $border-color
  white-space: nowrap
  padding-top: 1.2em
  height: $ruler-height
  box-sizing: border-box
  overflow: visible
  position: relative
  left: $timeline-header-width
  
  > .timeHand
    position: absolute
    top: 0
    left: 0
    width: 1px
    height: 9999px
    background: #F00
    z-index: 2
    margin-left: -$timeline-header-width 
    box-shadow: 0 0 1px #000
  
  > .markings
    margin-left: -4em
    > *
      display: inline-block
      width: 8em
      text-align: center
      position: relative
      box-sizing: border-box
      //border-left: $border
      
      &::before
        box-sizing: border-box
        position: absolute
        left: 25%
        top: 100%
        width: 25%
        height: 100%
        content: ""
        border-right: $border
        border-left: @border-right
        
      &::after
        box-sizing: border-box
        position: absolute
        right: 25%
        top: 100%
        width: 25%
        height: 100%
        content: ""
        border-right: $border
        border-left: @border-right
        
      &:first-child
        color: transparent
        
        &::after
          border-left: none
        
      > *
        position: absolute
        left: -1px
        top: 75%
        width: 100%
        height: 125%
        border-left: $border
        border-bottom: @border-left
        
        &::before
          position: absolute
          bottom: 0
          left: 12.5%
          width: 50%
          height: 50%
          border-left: $border
          border-right: @border-left
          content: ""
          box-sizing: border-box
          
         &::after
          position: absolute
          bottom: 0
          right: 12.5%
          width: 50%
          height: 50%
          border-left: $border
          border-right: @border-left
          content: ""
          box-sizing: border-box
      
    
  