.remix
  $border-color = #000
  $border = 1px solid $border-color

  > .ruler
    white-space: nowrap
    padding-bottom: 1.5em
    
    > *
      display: inline-block
      width: 8em
      text-align: center
      position: relative
      box-sizing: border-box
      border-left: $border
      
      &::before
        box-sizing: border-box
        position: absolute
        left: 25%
        top: 100%
        width: 25%
        height: 100%
        content: ""
        border-right: $border
        border-left: @border-right
        
      &::after
        box-sizing: border-box
        position: absolute
        right: 25%
        top: 100%
        width: 25%
        height: 100%
        content: ""
        border-right: $border
        border-left: @border-right
        
      > *
        position: absolute
        left: -1px
        top: 100%
        width: 100%
        height: 100%
        border-left: $border
        border-bottom: @border-left
        
        &::before
          position: absolute
          bottom: 0
          left: 12.5%
          width: 50%
          height: 75%
          border-left: $border
          border-right: @border-left
          content: ""
          box-sizing: border-box
          
         &::after
          position: absolute
          bottom: 0
          right: 12.5%
          width: 50%
          height: 75%
          border-left: $border
          border-right: @border-left
          content: ""
          box-sizing: border-box
      
    
  