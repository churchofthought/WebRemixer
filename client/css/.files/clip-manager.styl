.clip-manager
  position: fixed
  right: 0
  top: 0
  width: 32em
  height: 100%
  background: #fff
  z-index: 3
  
  &::before
    width: 100%
    padding: (($ruler-height - 1.25em) / 2)
    height: $ruler-height
    display: block
    text-align: center
    content: 'Clips'
    box-sizing: border-box
    background: rgba(0,0,0,0.25)
    border-bottom: 2px solid rgba(0,0,0,0.5)
    margin-bottom: 1em
  
  border-left: 2px solid rgba(0,0,0,0.5)
  
  > .new-clip
    margin: 1em
    margin-bottom: 0
  
  > .clips
    width: 100%
    
    > .clip
        cursor: pointer
        margin-top: 2em