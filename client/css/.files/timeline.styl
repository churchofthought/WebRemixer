.timeline
  $header-height = 3.5em
  
  box-sizing: border-box
  height: $timeline-height
  border: 0 solid #000;
  border-width: 0 0 1px 0;
  position: relative
  background: #fff
  padding-left: $timeline-header-width
  
  overflow: hidden
  
  transition: .25s all
  
  &.collapsed
    height: $header-height
  
  > .header
    position: absolute
    top: 0
    left: 0
    width: $timeline-header-width
    height: 100%
    
    > .toggle-height
      position: absolute
      top: 1.5em
      right: .5em
      font-size: 60%
    
    &::before
      position: absolute
      top: 0
      left: 0
      width: 100%
      padding: 1em
      height: $header-height
      box-sizing: border-box
      content: attr(data-title)
      background: #ccc
  
  > .timeline-clips
    width: 100%
    height: 100%
    position: relative
    z-index: 1
  
  > .selection
    background: #ccc
    position: absolute
    top: 0
    height: 100%