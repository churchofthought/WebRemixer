.clip-inspector
  
  .cut
    position: relative
    margin: 0 4em
    
    .ui-slider-handle:focus
      outline: none
    
  .cut-start
    position: absolute
    bottom: 100%
    margin-bottom: .5em
  
  .cut-end
    position: absolute
    top: 100%
    margin-top: .5em
  
  .clip-title
    width: 75%
    
  .video
    vertical-align: top
    margin: 0 2em
    cursor: pointer