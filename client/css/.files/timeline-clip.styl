.timeline-clip
  $bg-color = rgba(255,255,255,0.75)
  $border-color = rgba(0,0,0,0.5)

  background: transparent repeat center center
  background-size: auto 100%
  position: relative
  height: 100%
  min-height: @height
  max-height: @height
  box-sizing: border-box
  border: 1px solid $border-color
  overflow: hidden