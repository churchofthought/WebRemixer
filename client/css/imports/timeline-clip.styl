.timeline-clip
	$bg-color = rgba(255,255,255,0.75)
	$border-color = rgba(0,0,0,0.5)

	background-size: contain !important
	height: $timeline-height
	min-height: @height
	max-height: @height
	box-sizing: border-box
	border: 1px solid $border-color
	overflow: hidden
	transition: .5s border
	
	> .loop-indicator
		position: absolute
		left: 0
		top: 0
		width: 100%
		height: 100%
		background-size: 0
		background: linear-gradient(left, 90% transparent, 100% #0F0) 
	
	.timeline-clips > &
		top: 0 !important
	
	&::before
		position: absolute
		width: 100%
		height: 2em
		padding: 1em
		box-sizing: border-box
		content: attr(data-title)
		color: #fff
		background: rgba(0,0,0,0.5)
		text-overflow: ellipsis
		white-space: nowrap
		overflow: hidden
 
	&:hover
		.buttons
			visibility: visible
			opacity: 1
	
	&.ui-selected
		border: 1px solid #00FF00
		 
	> .buttons
		transition: .25s all
		visibility: hidden
		opacity: 0
		font-size: .8em
		position: absolute
		top: 0
		right: 0