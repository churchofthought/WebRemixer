.timeline
  $header-height = 3.5em
  
  box-sizing: border-box
  height: $timeline-height
  border-top: 1px solid #000
  position: relative
  background: #fff
  
  overflow: hidden
  
  transition: .25s all

  > .header
    position: fixed
    z-index: 2
    width: $timeline-header-width
    height: $timeline-height
    background: #ccc
    overflow: hidden
    transition: .25s all
    border-top: 1px solid #000
    box-sizing: border-box
    margin-top: -1px
    
    > .toggle-height
      position: absolute
      top: 1.5em
      right: .5em
      font-size: 60%
    
    &::before
      position: absolute
      top: 0
      left: 0
      width: 100%
      padding: 1em
      height: $header-height
      box-sizing: border-box
      content: attr(data-title)
      background: #ccc
      
  &.collapsed, &.collapsed > .header
    height: $header-height
  
  > .timeline-clips
    width: 100%
    height: 100%
    position: relative
    z-index: 1
    left: $timeline-header-width
  
  > .selection
    background: #ccc
    position: absolute
    top: 0
    height: 100%