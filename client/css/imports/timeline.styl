.timeline
	$header-height = 3.5em
	
	box-sizing: border-box
	height: $timeline-height
	border-top: 1px solid #000
	position: relative
	background: #fff
	
	transition: .25s height

	> .header
		transform: translate3d(0,0,0)
		transform-style: flat
		position: fixed
		z-index: 2
		width: $timeline-header-width
		height: $timeline-height
		background: #ccc
		overflow: hidden
		transition: .25s height
		border-top: 1px solid #000
		box-sizing: border-box
		margin-top: -1px
		
		> .toggle-height
			position: absolute
			top: .85em
			right: .25em
		
		&::before
			position: absolute
			top: 0
			left: 0
			width: 100%
			padding: 1em .75em
			height: $header-height
			box-sizing: border-box
			content: attr(data-title)
			background: #ccc
			
	&.collapsed, &.collapsed > .header
		height: $header-height
	
	> .timeline-clips
		height: 100%
		position: relative
		z-index: 1
		left: $timeline-header-width
		overflow: hidden

	> .automation-data
		position: absolute
		left: $timeline-header-width
		top: 0
		width: 100%
		height: 100%
		z-index: 3
		
	
	> .selection
		background: #ccc
		position: absolute
		top: 0
		height: 100%