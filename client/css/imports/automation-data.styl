.automation-data

	> .tooltip
		margin-top: .5em
		margin-left: .5em
		transition: .2s width, .2s height
		position: absolute
		background: rgba(255,255,255,0.8)
		padding: .4em
		font-size: .8em
		font-weight: bold
		font-family: monospace
		border: 1px solid rgba(0,0,0,0.5);

	&:not(:hover)
		> .tooltip
			visibility: hidden

	> svg
		width: 100%
		height: 100%

		> .bg
			fill: url(#automation-grid)

		> .point
			stroke: #000
			stroke-width: .1em
			fill: #F00

		> .pointPath
			fill: none
			stroke: #000
			stroke-width: .1em

#automation-grid
	> rect
		fill: rgba(0,0,0,0.25)