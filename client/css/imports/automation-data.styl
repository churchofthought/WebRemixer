.automation-data

	transition: .5s all

	pointer-events: none
	background: none

	&.hidden
		opacity: 0
		visibility: hidden

	> .tooltip
		margin-top: .5em
		margin-left: .5em
		transition: .2s width, .2s height
		position: absolute
		background: rgba(255,255,255,0.8)
		padding: .4em
		font-size: .8em
		font-weight: bold
		font-family: monospace
		border: 1px solid rgba(0,0,0,0.5);

	.timeline-clips:not(:hover) > &
		> .tooltip
			visibility: hidden

	> svg
		width: 100%
		height: 100%

		> .bg
			fill: url(#automation-grid)

		> .point
			stroke: #fff
			stroke-width: .25em
			fill: #3cc2ff;
			pointer-events: all

		> .pointPath
			fill: none
			stroke: #3cc2ff;
			stroke-width: .15em

#automation-grid
	> rect
		fill: rgba(0,0,0,0.25)